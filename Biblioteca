       "'                                                           '\n"
       " ----------------------------------------------------------- \n");
fflush (stdin);
gets(v[num_registros].autor);
system ("cls");
printf(" ----------------------------------------------------------- \n"
       "'                        FUNCAO INSERCAO                    '\n"
       "'-----------------------------------------------------------'\n"
       "' Digite o numero de paginas:                               '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
