#include<stdio.h>                        // TRABALHO FINAL DISCIPLINA: PROGRAMAÇÃO PARA ENGENHARIA 1
#include<stdlib.h>                       // ALUNOS: MATHEUS MAZZARINO E VITOR HUGO ZANELLA
#include<string.h>                       // OBS: O PROGRAMA FOI FEITO NO SISTEMA OPERACIONAL WINDOWS, POR TANTO,
#include<time.h>                         //    DEVE SER RODADO NO MESMO SISTEMA OPERACIONAL PARA QUE AS
#define N 1000                           //    FUNÇÕES PARA LIMPAR A TELA (system("cls")) E PARA LIMPAR O BUFFER (fflush(stdin))
#define M 30                             //    FUNCIONEM CORRETAMENTE.


typedef struct livros{                                           //DECLARAÇÃO STRUCT
char nome[M];
char editora[M];
char autor[M];
int num_paginas;
int ano;
float valor;
}
LIVROS;                                                          //A struct recebe o apelido de LIVROS

void funcao_insercao (LIVROS *v){                                //FUNÇÃO INSERÇÃO
int cont, num_registros, tempo;
num_registros = 0;
for(cont = 0; cont < N; cont++){
    if(strcmp(v[cont].nome, "\0") != 0){                         //Loop para contar o nímero de registros
        num_registros++;
    }
}
if(num_registros == N){


    printf(" ----------------------------------------------------------- \n"     // Erro de número máximo de registros alcançado
       "'                        FUNCAO INSERCAO                    '\n"
       "'-----------------------------------------------------------'\n"
       "'         -----------------------------------               '\n"
       "'        '                                   '              '\n"
       "'        'ERRO: O numero maximo de registros '              '\n"
       "'        '      foi alcancado!               '              '\n"
       "'        '-----------------------------------'              '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       " ----------------------------------------------------------- \n");
    system("pause");
    system ("cls");                                                               //utilização da função system("cls") para limpar a tela do prompt

return;
}

printf(" ----------------------------------------------------------- \n"
       "'                        FUNCAO INSERCAO                    '\n"
       "'-----------------------------------------------------------'\n"
       "' Digite o nome do livro:                                   '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       " ----------------------------------------------------------- \n");
fflush (stdin);                                                                  // Utilização da função fflush(stdin) para limpar o "ENTER" do buffer e usar a função gets
gets(v[num_registros].nome);
system ("cls");
printf(" ----------------------------------------------------------- \n"
       "'                        FUNCAO INSERCAO                    '\n"
       "'-----------------------------------------------------------'\n"
       "' Digite o nome da editora:                                 '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
