       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       " ----------------------------------------------------------- \n");
scanf("%d", &v[num_registros].num_paginas);
system ("cls");
printf(" ----------------------------------------------------------- \n"
       "'                        FUNCAO INSERCAO                    '\n"
       "'-----------------------------------------------------------'\n"
       "' Digite o ano de edicao:                                   '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
