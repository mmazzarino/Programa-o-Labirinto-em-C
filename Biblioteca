       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       " ----------------------------------------------------------- \n");
scanf("%f", &v[num_registros].valor);
system ("cls");

return;
}

void funcao_delecao_de_registros (LIVROS *v){                    //FUNÇÃO DELEÇÃO DE REGISTROS

int cont, num_registros, num_busca;
num_registros = 0;
num_busca = 0;
char nome_busca[M];
for(cont = 0; cont < N; cont++){
    if(strcmp(v[cont].nome, "\0") != 0){
        num_registros++;
    }
}
if(num_registros==0){
    printf(" --------------------------------------------------- \n"
       "'                        FUNCAO DELECAO                     '\n"
       "'-----------------------------------------------------------'\n"
       "'         ----------------------------------------          '\n"
       "'        '                                        '         '\n"
       "'        'ERRO: A estrutura de dados está vazia!  '         '\n"
       "'        '                                        '         '\n"
       "'        '----------------------------------------'         '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       " ----------------------------------------------------------- \n");

       system("pause");
       system ("cls");

       return;

}
printf(" ---------------------------------------------------------- \n"
       "'                        FUNCAO DELECAO                     '\n"
       "'-----------------------------------------------------------'\n"
       "'                                                           '\n"
       "'Digite o nome do livro que deseja apagar:                  '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       " ----------------------------------------------------------- \n");
fflush (stdin);
gets(nome_busca);
system ("cls");

for(cont=0; cont<num_registros; cont++){

if(strcmp(v[cont].nome, nome_busca) != 0){
    num_busca++;
}
if(num_busca == num_registros){
    printf(" ----------------------------------------------------------- \n"
       "'                        FUNCAO DELECAO                     '\n"
       "'-----------------------------------------------------------'\n"
       "'         ----------------------------------------          '\n"
       "'        '                                        '         '\n"
       "'        'ERRO: Registro de livro nao encontrado! '         '\n"
       "'        '                                        '         '\n"
       "'        '----------------------------------------'         '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       "'                                                           '\n"
       " ----------------------------------------------------------- \n");

       system("pause");
       system ("cls");

       return;
}
    if(strcmp(v[cont].nome, nome_busca) == 0){
            strcpy(v[cont].nome, v[num_registros-1].nome);
            strcpy(v[cont].editora, v[num_registros-1].editora);
            strcpy(v[cont].autor, v[num_registros-1].autor);
            v[cont].num_paginas = v[num_registros-1].num_paginas;
            v[cont].ano = v[num_registros-1].ano;
            v[cont].valor = v[num_registros-1].valor;

            strcpy(v[num_registros-1].nome, "\0");
            strcpy(v[num_registros-1].editora, "\0");
            strcpy(v[num_registros-1].autor, "\0");
            v[num_registros-1].num_paginas = 0;
            v[num_registros-1].ano = 0;
            v[num_registros-1].valor = 0;
return;
}
}
}

void funcao_imprime_todos(LIVROS *v){                            //FUNÇÃO IMPRIME TODOS REGISTROS

int cont, num_registros;
num_registros = 0;
for(cont = 0; cont < N; cont++){
    if(strcmp(v[cont].nome, "\0") != 0){
        num_registros++;
    }
}
for (cont = 0; cont < num_registros; cont++){
    printf("-----------------------------------------------------------\n"
       "NOME: %s                                                       \n"
       "EDITORA: %s                                                    \n"
       "AUTOR: %s                                                      \n"
       "NUMERO DE PAGINAS: %d                                          \n"
       "ANO DE EDICAO: %d                                             \n"
       "VALOR: %f                                                       \n\n", v[cont].nome, v[cont].editora, v[cont].autor, v[cont].num_paginas, v[cont].ano, v[cont].valor);

}
    system("pause");
    system ("cls");
return;
}

